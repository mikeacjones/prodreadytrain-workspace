<?xml version="1.0" encoding="UTF-8"?>

<mule
    xmlns:http="http://www.mulesoft.org/schema/mule/http"
    xmlns="http://www.mulesoft.org/schema/mule/core"
    xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd">
    <flow
        name="apiAlive"
        doc:id="e5a18cde-c317-4731-9488-1c677837ecab">
        <http:listener
            doc:name="GET /alive"
            doc:id="7686aff5-5f93-4732-8345-fb2c113f639c"
            config-ref="apihttpListenerConfig"
            path="/alive"
            allowedMethods="GET">
            <http:error-response statusCode="503">
                <http:body><![CDATA[down]]></http:body>
            </http:error-response>
        </http:listener>
        <set-payload
            value="up"
            doc:name="Set Payload"
            doc:id="da321e7a-03e1-47e9-9f5e-4303a4a7c009" />
    </flow>
    <flow
        name="apiReady"
        doc:id="58031312-b7a8-43cb-9cd7-aa558a797cf2">
        <http:listener
            doc:name="GET /ready"
            doc:id="0d9f4564-bfe1-4e5c-a3f4-6b6852e9c219"
            config-ref="apihttpListenerConfig"
            path="/ready"
            allowedMethods="GET">
            <http:error-response statusCode="503">
                <http:body><![CDATA[down]]></http:body>
            </http:error-response>
        </http:listener>
        <flow-ref
            doc:name="Flow Reference"
            doc:id="fdede09a-e0ca-4b0d-90d6-eaad7ffd8196"
            name="checkDepsAreAlive" />
    </flow>
</mule>
